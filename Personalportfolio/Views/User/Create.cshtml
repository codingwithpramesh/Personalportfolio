@model User

@{
    ViewData["Title"] = "Create user";
  
}
<style>
    body{
        background-image: url("https://img.freepik.com/free-photo/organized-desk-with-copy-space_23-2148219270.jpg?w=826&t=st=1695209776~exp=1695210376~hmac=6a5c2bcac2b8c5df77d27c2d17b610a2ba185845f660844f2d95db5f6d3dc39d") ;
        background-size:cover;
    }

    image{
        width:100%;
        height:100%;
    }

    a:hover{
        color:darkblue
    }
</style>


<div class="container w-75 h-75 mx-auto"  >
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <p class="align-text-top mx-auto"  style="color:darkmagenta"> Register Now</p>
        <div class="col">
          
            <div class="form-group">
                <label asp-for="FirstName"> First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>

        </div>

            <div class="col">

                <div class="form-group">
                    <label asp-for="LastName"> Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
   
     </div>

     <div class="row">
            <div class="col">
            <div class="form-group">
                <label asp-for="Address"> Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address"></span>
            </div>

            </div>

            <div class="col">
            <div class="form-group">
                <label asp-for="Phone"> Phone</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone"></span>
            </div>
            </div>
        </div>
            <div class="form-group">
                <label asp-for="About"> About</label>
                <textarea asp-for="About" class ="form-control" rows="4" cols="50"> </textarea>
                <span asp-validation-for="About"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profilepic"> ProfilePic</label>
                <input type="file" asp-for="Profilepic" class="form-control" name="file" />
                <span asp-validation-for="Profilepic"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="row">
                <div class="col">

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>

                </div>

                <div class="col">
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                </div>


            </div>
            <div class="form-group" style="margin-top:10px;">
                <button type="submit" asp-action="Create" class="btn btn-primary">Register</button>
            </div>

        <p style="color:white"> If you are  already login account <a style="color:chocolate; text-decoration:none; " asp-action="Login" asp-controller="Account">Login</a></p>

</form>
    </div>
